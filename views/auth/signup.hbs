<main class='container'>
  <div class='container col-12 col-md-6 col-lg-4 mt-5'>
    <div class='card my-2 shadow'>
      <div class='row align-items-center p-2'>
        <div class='col-12 d-block mb-3'>
          <h2 class='card-title text-center'>Sign Up</h2>
        </div>
        <form action='/signup' method='POST'>
          <div>
            <label class='col-12 mb-3' for=''>Name: </label>
          </div>
          <div>
            <input class='col-12 mb-3' type='text' name='username' />
          </div>

          <div class='col-12 mb-3'>
            <label for=''>Password: </label>
          </div>
          <div class='col-12 mb-3'>
            <input class='col-12 mb-3' type='password' name='password' />
          </div>
          <div class='col-12 mb-3'>
            <button type='submit' class='col-12 btn btn-primary'>Sign Up</button>
          </div>
          <div class='col-12 mb-3'>
            {{#if message}}
              <h3>{{message}}</h3>
            {{/if}}
          </div>
        </form>
      </div>
    </div>
  </div>
</main>