<main class="container">
  <div class="container col-12 col-md-6 col-lg-4 mt-5">
    <div
      class="card border-secondary shadow mb-5 bg-body rounded align-items-center p-2"
      style="width: 18rem;"
    >
      <div class="card-body">
        <h2 class="card-title">Edit the Event</h2>
      </div>
        {{! this should be the link from route.post }}
        <form action="/events/{{event.id}}/edit" method="post">
          <div>
            <label class="col-12" for="title">Title: </label>
          </div>
          <div>
            <input class="col-12 mb-3" type="text" value="{{event.title}}" name="title"/>
          </div>
          <div>
            <label class="col-12" for="date">Date: </label>
          </div>
          <div>
            <input class="col-12 mb-3" type="text" value="{{event.date}}" name="date"/>
          </div>
          <div>
            <label class="col-12" for="capacity">Capacity: </label>
          </div>
          <div>
            <input class="col-12 mb-3" type="text" value="{{event.capacity}}" name="capacity"/>
          </div>

          <select name="location" class="col-12 mb-3">
            {{#each locationList}}
              <option value="{{_id}}">{{name}}</option>
            {{/each}}
          </select>
          <label for="availableSlots">Available Slots: </label>
          <input
            type="text"
            value="{{event.availableSlots}}"
            name="availableSlots"
            class="col-12 mb-3"
          />

          <button class="btn btn-primary col-12 mb-3" type="submit">Edit the event</button>








